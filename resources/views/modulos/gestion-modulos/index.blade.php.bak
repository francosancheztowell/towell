            try {
                const response = await $.ajax({
                    url: RUTAS.togglePermiso(id),
                    method: 'POST',
                    headers: {
                        'X-CSRF-TOKEN': Utils.getCSRFToken(),
                        'Content-Type': 'application/json'
                    },
                    data: JSON.stringify({
                        _token: Utils.getCSRFToken(),
